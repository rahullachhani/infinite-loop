<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sign_up"
    android:padding="24dp"
    tools:context="com.infiniteloop.hackathon.merchant.SignUpActivity">
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Name"
        android:id="@+id/first_name_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/first_name_edit_text"
        android:textSize="18sp"
        android:hint="First name"
        android:inputType="text"
        android:layout_alignRight="@+id/bank_spinner" />
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:text="Bank"
        android:layout_below="@id/first_name_text_view"
        android:textSize="18sp"
        android:id="@+id/bank_text_view" />
    <Spinner
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/bank_spinner"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/first_name_text_view"
        android:layout_alignParentRight="true"
        android:entries="@array/bank_list"
        android:layout_alignParentEnd="false" />
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Account No"
        android:id="@+id/account_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bank_text_view"/>
    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/account_edit_text"
        android:inputType="number"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/bank_spinner"
        android:layout_below="@id/bank_spinner"/>
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Enter email ID"
        android:id="@+id/username_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/account_text_view"/>

    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/email_edit_text"
        android:inputType="text"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignRight="@+id/bank_spinner"
        android:layout_below="@id/account_edit_text"/>
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Create Password"
        android:id="@+id/password_up_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/username_text_view"/>
    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/password_up_edit_text"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_alignRight="@id/email_edit_text"
        android:layout_below="@id/email_edit_text"/>
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="IFSC"
        android:id="@+id/ifsc_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/password_up_text_view"/>
    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/ifsc_edit_text"
        android:inputType="number"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_alignRight="@id/email_edit_text"
        android:layout_below="@id/password_up_edit_text"/>
    <TextView
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Mobile No."
        android:id="@+id/mobile_text_view"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ifsc_text_view"/>
    <EditText
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:id="@+id/mobile_edit_text"
        android:inputType="number"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_alignRight="@id/email_edit_text"
        android:layout_below="@id/ifsc_edit_text"/>
</RelativeLayout>